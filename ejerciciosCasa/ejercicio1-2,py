numUno = int(input("Escriba un numero: "))
numDos = int(input("Escriba otro numero: "))
resta =0
while numUno == numDos:
    numUno = int(input("Escriba un numero: "))
    numDos = int(input("Escriba otro numero: "))
    
    if numDos > numUno:
        resta = numDos - numUno
        print(f"EL valor de la resta es: {resta}")
    else:
        resta= numUno - numDos
        print(f"El valor de la resta es: {resta}")
    while resta != 0:
        if numDos < numUno:
            resta = resta - numDos
            print("El resultado de la resta es: ", resta)
        else:
            resta= resta - numUno
            print("El resultado de la resta es: ", resta)
        if resta < 0:
            print(f"El residuo es {resta}")
            break 
        